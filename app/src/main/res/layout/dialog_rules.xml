<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/startText"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/rule1_by"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewFlag"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/flag" />

                    <TextView
                        android:id="@+id/textViewFlag"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="64dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/rule2_by"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewBino"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/binoculars" />

                    <TextView
                        android:id="@+id/textViewBino"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="64dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/rule3_by"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewPhon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/phone" />

                    <TextView
                        android:id="@+id/textViewPhon"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="64dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/rule4_by"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewAisp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ai" />

                    <TextView
                        android:id="@+id/textViewAisp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="64dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/rule5_by"
                        android:textSize="17sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/overText"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/rule6_by"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>