        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button50"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/binoculars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonAdvice"
        app:layout_constraintStart_toEndOf="@id/buttonChange" />

    <Button
        android:id="@+id/buttonAdvice"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonAI"
        app:layout_constraintStart_toEndOf="@id/button50" />

